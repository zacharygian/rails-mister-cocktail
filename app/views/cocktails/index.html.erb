<h1>Cocktail List</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Cocktail</div>
        <div class="card-description">
          <h2> <%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<%= link_to "Add New Cocktail", new_cocktail_path %>



