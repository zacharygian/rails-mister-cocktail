<h1>
  <%= @cocktail.name %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
</h1>

<h3>List of Ingredients</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %>
      -
      <%= dose.description %>
      <%= link_to "delete dose", dose_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Create A Dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Go Back To The Cocktail List", cocktails_path %>

